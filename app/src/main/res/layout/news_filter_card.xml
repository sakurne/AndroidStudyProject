<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_result_item_height">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/newsSwitch"
        android:layout_width="0dp"
        android:layout_height="@dimen/profile_divider_height"
        android:layout_marginEnd="@dimen/help_filter_card_switch_margin_end"
        android:textAppearance="@style/TextStyle8"
        android:textColor="@color/black_87"
        android:textSize="@dimen/help_filter_card_switch_text_size"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_divider_height"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/cool_grey"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>