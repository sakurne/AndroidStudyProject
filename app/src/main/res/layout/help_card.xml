<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/help_grid_margin"
    android:background="@color/light_grey"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/help_card_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/help_image_padding_start_end"
        android:paddingTop="@dimen/help_image_padding_top"
        android:paddingEnd="@dimen/help_image_padding_start_end" />

    <TextView
        android:id="@+id/help_card_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/help_text_height"
        android:fontFamily="@font/officina_sans_extra_bold"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextStyle" />
</LinearLayout>